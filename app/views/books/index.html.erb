<div class="booklist_contents">
  <h1>予約済ルーム一覧</h1>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>合計料金</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>予約確定日時</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td class="image_column">
              <%= link_to "/rooms/#{book.room_id}" do %>
                <img src="/room_images/<%= book.room.image_name %>" class="booklist_image">
              <% end %>
            </td>
            <td>
              <%= link_to "/rooms/#{book.room_id}" do %>
                <%= book.room.name %>
              <% end %>
            </td>
            <td><p><%= book.room.comment %></p></td>
            <td><p>¥ <%= book.total_price %></p></td>
            <td><p><%= book.start.to_s(:datetime_jp) %></p></td>
            <td><p><%= book.end.to_s(:datetime_jp) %></p></td>
            <td><p><%= book.created_at.to_s(:datetime_jp) %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
