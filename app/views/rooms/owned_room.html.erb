<div class="roomlist_contents">
  <h1>登録済ルーム一覧</h1>
  <div class="table-responsive">
    <!-- ユーザーの登録済ルームをセルで一覧表示 -->
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td class="image_column">
              <%= link_to "/rooms/#{room.id}" do %>
                <img src="/room_images/<%= room.image_name %>" class="roomlist_image">
              <% end %>
            </td>
            <td>
              <%= link_to "/rooms/#{room.id}" do %>
                <%= room.name %>
              <% end %>
            </td>
            <td><p><%= room.comment %></p></td>
            <td><p>¥ <%= room.price_per_day_and_person %></p></td>
            <td><p><%= room.created_at.to_s(:datetime_jp) %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
